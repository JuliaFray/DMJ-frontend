{
  "compilerOptions": {
    "rootDir": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "~app": [
        "./app"
      ],
      "~app/*": [
        "./app/*"
      ],
      "~pages": [
        "./pages"
      ],
      "~pages/*": [
        "./pages/*"
      ],
      "~widgets": [
        "./widgets"
      ],
      "~widgets/*": [
        "./widgets/*"
      ],
      "~features": [
        "./features"
      ],
      "~features/*": [
        "./features/*"
      ],
      "~entities": [
        "./entities"
      ],
      "~entities/*": [
        "./entities/*"
      ],
      "~shared": [
        "./shared"
      ],
      "~shared/*": [
        "./shared/*"
      ]
    }
  },
  "strict": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "noFallthroughCasesInSwitch": true,
  "include": [
    "src", "shared"
  ],
  "exclude": [
    "node_modules"
  ],

}
